  <parameter name="pch_post_event_pause" value="700" />
  <parameter name="location_force_script" value="false" /><!-- Was false -->
  <parameter name="location_use_fallback_strategy" value="false" />
  <parameter name="max_retries" value="0" />
  
  <!-- CUSTOM PARAMETERS -->
