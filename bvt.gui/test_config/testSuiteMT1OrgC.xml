<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="10" name="OrgC BVT" parallel="tests">

	<!-- Test method has to contain all groups to be run if intersect_groups is true -->
	<parameter name="intersect_groups" value="false" />
  
	<!-- Organization specific overrides/properties -->
	<!-- Test by overriding browser_url to the organization url -->
	<parameter name="browser_url" value="https://mt1-orgc.cnx.cwp.pnp-hcl.com/" />
	<parameter name="default_users_properties"
		value="test_config/extensions/user/mt1_MT_orgc_users.properties" />


	<!-- TESTS -->
	<test name="Gallery" preserve-order="true" enabled="true">
	   <groups>
		  <run>
			<include name="level2" />
			<exclude name="mt-exclude" />
			<exclude name="mtlevel2" />
		  </run>
	   </groups>
		<classes>
			<class
				name="com.ibm.conn.auto.tests.communities.BVT_Level_2_Communities_Gallery" />
		</classes>
	</test>
	
	<test name="TouchpointRedirection" preserve-order="true" enabled="true">
		<classes>
			<class
				name="com.ibm.conn.auto.tests.touchpoint.BVT_Touchpoint_Redirection" />
		</classes>
	</test> 

