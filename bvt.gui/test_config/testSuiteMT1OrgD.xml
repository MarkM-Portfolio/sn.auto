<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="10" name="OrgD BVT" parallel="tests">

    <!-- Test method has to contain all groups to be run if intersect_groups is true -->
    <parameter name="intersect_groups" value="false" />

	<!-- Organization specific overrides/properties -->
	<!-- Test by overriding browser_url to the organization url -->
	<parameter name="browser_url" value="https://mt1-orgd.cnx.cwp.pnp-hcl.com/" />
	<parameter name="default_users_properties"
		value="test_config/extensions/user/mt1_MT_orgd_users.properties" />

	<!-- TESTS -->
	<!-- Other MT Specific TESTS -->
	<test name="SharepointConfig" parallel="tests" preserve-order="true" enabled="false">
	<groups>
		  <run>
			<include name="mtlevel2" />
		  </run>
	   </groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.sharepoint.BVT_Sharepoint" />
		</classes>
	</test>
	
