<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="10" name="OrgA BVT" parallel="tests" >

  <groups>
    <run>
      <include name="level2" />
      <exclude name="mt-exclude" />      
    </run>
  </groups>

  <!-- Organization specific overrides/properties -->
  <!-- Test by overriding browser_url to the organization url -->
  <parameter name="browser_url" value="https://mtdemo-orga.cnx.cwp.pnp-hcl.com/" />
  <parameter name="default_users_properties" value="test_config/extensions/user/mtdemo_MT_orga_users.properties" />
  
  
  <!-- TESTS -->
  <test name="Gallery" preserve-order="true" enabled="true">
    <classes>
      <class name="com.ibm.conn.auto.tests.communities.BVT_Level_2_Communities_Gallery" />
    </classes>   
  </test>
  <test name="Touchpoint" parallel="tests" preserve-order="true" enabled="true">
		<packages>
			<package name="com.ibm.conn.auto.tests.touchpoint" />
		</packages> 
		<!-- <classes>
	   <class name="com.ibm.conn.auto.tests.touchpoint.BVT_Level_2_Touchpoint_AddYourInterestsScreen">
	    <methods>
		<include name="addYourInterestScreen"/>
       </methods>
	   </class>
    </classes> -->
    </test> 

  <test name="Homepage" preserve-order="true" enabled="true">
    <classes>
      <class name="com.ibm.conn.auto.tests.homepage.BVT_Level_2_Homepage" />
    </classes>
  </test>
  
  <test name="OrientMe" preserve-order="true" enabled="true">
    <groups>
      <run>
        <include name="level2" />
        <include name="regression" />      
      </run>
    </groups>  
    <packages>
      <package name="com.ibm.conn.auto.tests.orientme" />
    </packages>
  </test>

  <test name="iWidget Container" preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.cre" />
    </packages>
  </test>

  <test name="Mentions" preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.mentions" />
    </packages>
  </test>  

  <test name="News" preserve-order="true" enabled="true">
    <classes>
      <class name="com.ibm.conn.auto.tests.homepage.BVT_Level_2_Homepage_AS" />
    </classes>
  </test>

  <test name="Profiles" preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.profiles" />
    </packages>
  </test>

  <test name="Search" preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.globalsearch" />
    </packages>
  </test>

  <test name="Widgets" preserve-order="true" enabled="true">	
    <classes>
      <class name="com.ibm.conn.auto.tests.communities.BVT_Level_2_Communities_Widgets" />
    </classes>
  </test>
  
  <test name="HomePageAS_Bosch" thread-count="2" parallel="methods"
		preserve-order="true" enabled="true">
		<groups>
			<run>
				<include name="regression" />
				<exclude name="mt-exclude" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.homepage.BVT_BoschUAT_Homepage_AS">
			</class>
		</classes>
	</test>

	<test name="Profiles_Bosch" preserve-order="true" enabled="true">
		<groups>
			<run>
				<include name="regression" />
				<exclude name="mt-exclude" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.profiles.BVT_BoschUAT_Profiles">
			</class>
		</classes>
	</test>
  
</suite>
