<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="10" name="OrgB BVT" parallel="tests" >

  <groups>
    <run>
      <include name="level2" />
      <exclude name="mt-exclude" />
    </run>
  </groups>

  <!-- Organization specific overrides/properties -->
  <!-- Test by overriding browser_url to the organization url -->
   <parameter name="browser_url" value="https://mtdemo-orgb.cnx.cwp.pnp-hcl.com/" />
   <parameter name="default_users_properties" value="test_config/extensions/user/mtdemo_MT_orgb_users.properties" />


  <!-- TESTS -->
  <test name="Activities" thread-count="2" parallel="methods"  preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.activities" />
    </packages>
  </test>

  <test name="Calendar" preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.calendar" />
    </packages>
  </test>

  <test name="Communities" thread-count="2" parallel="methods" preserve-order="true" enabled="true">
    <classes>
      <class name="com.ibm.conn.auto.tests.communities.BVT_Level_2_Communities" />
    </classes>
  </test>

  <test name="Embedded Experience" preserve-order="true" enabled="true">
    <classes>
      <class name="com.ibm.conn.auto.tests.homepage.BVT_Level_2_Homepage_EE" />
    </classes>
  </test>

  <test name="Files" preserve-order="true" enabled="true">
    <packages>
      <package name="com.ibm.conn.auto.tests.files" />
    </packages>
  </test>
  
 <test name="ICEC" preserve-order="true" enabled="true">
		<classes>
			<class
				name="com.ibm.conn.auto.tests.icec.BVT_Level_2_Icec_Highlights_Widgets" />
			<class name="com.ibm.conn.auto.tests.icec.BVT_Level_2_Icec_Highlights" />
		</classes>
	</test>

	<test name="Files_Bosch" preserve-order="true" enabled="true">
		<groups>
			<run>
				<include name="regression" />
				<exclude name="mt-exclude" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.files.regression.BVT_BoschUAT_Files">
			</class>
		</classes>
	</test>
	
	<test name="Calender_Bosch" preserve-order="true" enabled="true">
		<groups>
			<run>
				<include name="regression" />
				<exclude name="mt-exclude" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.calendar.BVT_BoschUAT_Calender" />
		</classes>
	</test>

	<test name="Communities_Bosch" thread-count="2" parallel="methods"
		preserve-order="true" enabled="true">
		<groups>
			<run>
				<include name="regression" />
				<exclude name="mt-exclude" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.communities.BVT_BoschUAT_Communities">
			</class>
		</classes>
	</test>
	
	<test name="Activites_Bosch" preserve-order="true" enabled="true">
		<groups>
			<run>
				<include name="regression" />
				<exclude name="mt-exclude" />
			</run>
		</groups>
		<classes>
			<class name="com.ibm.conn.auto.tests.activities.BVT_BoschUAT_Activities" />
		</classes>
	</test>
</suite>
