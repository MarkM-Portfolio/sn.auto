{
  "data": [
    {
      "id": "data",
      "fields": [
        {
          "id": "name",
          "label": "Name",
          "categories": [  ],
          "format": {
            "fitMethod": "none",
            "noSpaceFormat": {"pattern": ""}
          }
        },
        {
          "id": "parent",
          "label": "Parent",
          "categories": [  ],
          "format": {
            "fitMethod": "none",
            "noSpaceFormat": {"pattern": ""}
          }
        },
        {"id": "hits", "label": "Total Hits"},
        {"id": "uhits", "label": "Unique Hits"}
      ],
      "rows": [  ]
    },
    {
      "id": "percentified",
      "type": "percent",
      "group": [  ],
      "output": [
        {
          "field": {"id": "fname"},
          "input": {"$ref": "name"}
        },
        {
          "field": {"id": "fparent"},
          "input": {"$ref": "parent"}
        },
        {
          "field": {
            "id": "fuhits",
            "format": {"numericPattern": "#.#"}
          },
          "input": {"$ref": "uhits"},
          "parameters": {"summaryFunction": "percent"}
        },
        {
          "field": {
            "id": "fhits",
            "format": {"numericPattern": "#.#"}
          },
          "input": {"$ref": "hits"},
          "parameters": {"summaryFunction": "percent"}
        }
      ],
      "source": {"$ref": "data"}
    }
  ],
  "copyright": "(C) Copyright IBM Corp. 2011",
  "grammar": [
    {
      "bounds": {"width": "100%", "left": 0, "top": "0%"},
      "coordinates": {
        "dimensions": [ {} ],
        "transforms": [
          {
            "type": "polar",
            "polarParameters": {
              "CCW": false,
              "diameter": {
                "min": "50%",
                "max": "100%",
                "preferred": "100%"
              }
            }
          }
        ],
        "style": {
          "fill": {"a": 0},
          "outline": {"a": 0, "h": 0, "l": 0, "s": 0}
        }
      },
      "elements": [
        {
          "type": "interval",
          "data": {"$ref": "percentified"},
          "color": [ {"field": {"$ref": "fname"}} ],
          "meta": [
            {"field": {"$ref": "fname"}, "key": "cat"},
            {"field": {"$ref": "fparent"}, "key": "parent"}
          ],
          "positioning": {
            "id": {"$ref": "fname"},
            "layout": "stack",
            "levels": [
              {"labelContent": [ {"$ref": "fname"} ]},
              {
                "labelContent": [
                  {"$ref": "fparent"},
                  " ",
                  {"$ref": "fname"}
                ]
              }
            ],
            "orientation": "left-to-right",
            "padding": 0,
            "parent": {"$ref": "fparent"},
            "size": {"$ref": "fuhits"},
            "method": "treemap"
          },
          "styles": [
            {
              "target": "level_*",
              "style": {
                "stroke": {"width": 1},
                "outline": "white"
              }
            },
            {
              "target": "level_label_0",
              "style": {"location": "fit"}
            },
            {
              "target": "level_label_1",
              "style": {"location": "inside"}
            }
          ],
          "tooltip": [
            {
              "content": [
                {"$ref": "fparent"},
                " ",
                {"$ref": "fname"},
                "<br>",
                {"$ref": "fuhits"},
                "%"
              ]
            }
          ],
          "style": {
            "fill": {"a": 0.5, "l": 0.4, "s": 0.8},
            "stroke": {"width": 0.8},
            "outline": {"h": 0, "l": 0, "s": 0}
          }
        }
      ],
      "labelCollisionMethod": "none"
    }
  ],
  "version": "6.0"
}