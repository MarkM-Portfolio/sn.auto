<project name="${env.APPLICATION} CI" default="development" basedir="."> 
    <target name="ci.build.report">
      <echo>Building junit XML report now...</echo>

      <junitreport todir="${env.CI_HOME}">
        <fileset dir="${env.CI_HOME}/${env.SRC}/${env.APPDIR}">
            <include name="testresult_*.xml"/>
        </fileset>

        <report format="noframes" todir="${env.CI_HOME}" />
      </junitreport>
    </target>
</project>
