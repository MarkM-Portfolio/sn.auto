<component name="waffle" description="Waffle GUI Automation Framework"
    type="java" spec-version="1.0">

    <output-group name="default">
        <output type="jar" visibility="public" platform="all"
            location="${env.LWP_COMP_BUILD}/lib/waffle.jar"
            preferredInstallLocation="lib" />
        <output type="dir" visibility="public" platform="all"
            location="resources"
            preferredInstallLocation="resources"/>
    </output-group>

    <output-group name="dist">
        <output type="jar" visibility="public" platform="all"
            location="${env.LWP_COMP_BUILD}/lib/waffle.jar"
            preferredInstallLocation="/" />
    </output-group>

	<dependency name="libs.auto/testng" type="jar" version="6.4" />
    <dependency name="libs.auto/selenium" type="jar" version="7.0" />
    <dependency name="libs.auto/slf4j" type="jar" version="1.7" />    
</component>




